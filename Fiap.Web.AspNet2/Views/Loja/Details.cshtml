@model LojaModel

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Loja</h2>

                <form asp-controller="Loja" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="LojaId" />
                    <div class="form-group">
                        <label class="control-label" asp-for="NomeLoja"></label>
                        <input class="form-control col-5" asp-for="NomeLoja" />
                    </div>

                    @if (Model.ProdutoLojas.Count > 0)
                    {
                        <h3>Produtos:</h3>
                        <ul>
                            @foreach (var item in Model.ProdutoLojas)
                            {
                                <li>@item.Produto.NomeProduto</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <h3>Não existem produtos no estoque dessa loja!!!!</h3>
                    }


                    <a href="#" class="btn btn-default btn-lg">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>

