@model IEnumerable<ClienteModel>


@{

}


<div class="container">
    <div class="row">
        <div class="col-md-12">


            <h1>Clientes</h1>
            <p class="toolbar">
                <a class="create btn btn-default" href="Cliente/Novo">Novo Cliente</a>
            </p>

            @{ 
                String mensagemSucesso = (String)TempData["mensagemSucesso"];
                if ( ! String.IsNullOrEmpty(mensagemSucesso) ) { 
                        <div class="alert alert-warning" role="alert">
                            <h4>@mensagemSucesso</h4>
                        </div>
                }
            }

            


            @if ( Model.Count() > 0 ) {  
            <table class="table table-striped" border="1" cellspacing="0" cellpadding="0">
                <thead>
                    <tr>
                        <th data-field="id">Id</th>
                        <th data-field="name">Nome</th>
                        <th class="actions" width="220">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach ( var cliente in Model ) {
                        <partial name="_ClienteItem" model="cliente" />
                    }
                </tbody>
            </table>
            } else
            {
                <div class="alert alert-warning" role="alert">
                    <h4>Não existem clientes cadastrados até o momento.</h4>
                </div>
            }


        </div>
    </div>
</div>

