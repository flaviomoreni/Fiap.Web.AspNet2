@model ClienteModel

@{
    
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Alterar</h2>

                <form asp-controller="Cliente" asp-action="Alterar" method="post">
                    <input asp-for="ClienteId" />

                    <div class="form-group">
                        <label class="control-label" asp-for="Nome"></label>
                        <input class="form-control col-5" asp-for="Nome" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Email"></label>
                        <input class="form-control col-8" asp-for="Email" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Representante - @Model.RepresentanteId </label>
                        <select class="form-control col-5" asp-for="RepresentanteId" asp-items="@ViewBag.Representantes">
                            <option>Selecione</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="control-label" asp-for="DataNascimento"></label>
                        <input class="form-control col-5" asp-for="DataNascimento" />
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Observacao"></label>
                        <textarea class="form-control" asp-for="Observacao"></textarea>
                    </div>
                    <a href="#" class="btn btn-default btn-lg">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>

