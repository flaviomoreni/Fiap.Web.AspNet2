@model ClienteModel

@{
    
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Alterar</h2>

                <form action="/Cliente/Salvar" method="post">
                    <input type="hidden" name="ClienteId" value="@Model.ClienteId" />

                    <div class="form-group">
                        <label class="control-label">Nome:</label>
                        <input class="form-control col-5" type="text" name="nome" value="@Model.Nome" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email:</label>
                        <input class="form-control col-5" type="email" name="email" value="@Model.Email" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nascimento:</label>
                        <input class="form-control col-5" type="date" name="dataNascimento" value="@Model.DataNascimento" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Observação:</label>
                        <textarea name="observacao" class="form-control" rows="4" cols="100">@Model.Observacao</textarea>
                    </div>


                    <a href="#" class="btn btn-default btn-lg">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>

