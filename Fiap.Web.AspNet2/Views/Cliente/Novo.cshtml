<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Cadastrar</h2>

                <form action="/Cliente/Cadastrar" method="post">

                    <div class="form-group">
                        <label class="control-label">Nome:</label>
                        <input class="form-control col-5" type="text" name="nome" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email:</label>
                        <input class="form-control col-5" type="email" name="email" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nascimento:</label>
                        <input class="form-control col-5" type="date" name="dataNascimento" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Observação:</label>
                        <textarea name="observacao" class="form-control" rows="4" cols="100"></textarea>
                    </div>


                    <a href="#" class="btn btn-default btn-lg">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>

