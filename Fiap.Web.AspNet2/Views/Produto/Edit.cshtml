@model Fiap.Web.AspNet2.ViewModel.ProdutoLojaViewModel

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Produto</h2>

                <form asp-controller="Produto" asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Produto.ProdutoId" />
                    <div class="form-group">
                        <label class="control-label" asp-for="Produto.NomeProduto"></label>
                        <input class="form-control col-5" asp-for="Produto.NomeProduto" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Lojas</label>
                        <select multiple class="form-control col-5" asp-for="LojaId" asp-items="@ViewBag.Lojas">
                        </select>
                    </div>

                    <a href="#" class="btn btn-default btn-lg">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>
