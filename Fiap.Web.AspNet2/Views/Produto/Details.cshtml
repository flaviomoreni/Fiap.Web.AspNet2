@model ProdutoModel

<div>
    <h4>Produto - Detalhe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoId):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeProduto):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
    </dl>
    <hr />
    @if (Model.ProdutoLojas.Count > 0) {
        <h5>Lojas:</h5>
        <ul>
            @foreach (var loja in Model.ProdutoLojas)
            {
                <li>@loja.Loja.NomeLoja</li>
            }
        </ul>
    }
    </div>
<div>
    <a asp-action="Index">Voltar</a>
</div>

