@model Fiap.Web.AspNet2.ViewModel.ProdutoLojaViewModel

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Produto</h2>

                <form asp-controller="Produto" asp-action="Create" method="post">
                    <div class="form-group">
                        <label class="control-label" asp-for="Produto.NomeProduto"></label>
                        <input class="form-control col-5" asp-for="Produto.NomeProduto" />
                    </div>
                    <div class="form-group">
                        @foreach (var item in ViewBag.Lojas)
                        {
                            <input type="checkbox" value="@item.LojaId" name="LojaId" />@item.NomeLoja<br /> 
                        }
                    </div>

                    <a href="#" class="btn btn-default btn-lg">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>
