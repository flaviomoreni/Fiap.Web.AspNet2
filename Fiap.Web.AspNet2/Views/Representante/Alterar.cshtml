@model Fiap.Web.AspNet2.ViewModel.RepresentanteViewModel

@{

}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Representante - Alterar</h2>

                <form asp-controller="Representante" asp-action="Alterar" method="post">
                    <input asp-for="RepresentanteId" />

                    <div class="form-group">
                        <label class="control-label" asp-for="NomeRepresentante"></label>
                        <input class="form-control col-5" asp-for="NomeRepresentante" />
                    </div>
                    

                    @if (Model.Clientes.Count() > 0) {
                    <h2>Cliente:</h2>
                        @foreach(var item in Model.Clientes)
                        {
                            @item.Nome <br />
                        }
                    }

                    <a href="#" class="btn btn-default btn-lg">Cancelar</a>
                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>

